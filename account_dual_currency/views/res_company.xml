<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="res_company_dual_currency" model="ir.ui.view">
            <field name="name">res_company_dual_currency</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="currency_id_dif" options="{'no_create': True, 'no_open': True}" context="{'active_test': False}"/>
                </xpath>
                <xpath expr="//field[@name='favicon']/.." position="after">
                    <group string="IGTF Divisas" aling="center">
                        <field name="aplicar_igtf_divisa"/>
                        <field name="igtf_divisa_porcentage"/>
                        <field name="account_debit_wh_igtf_id" attrs="{'required': [('aplicar_igtf_divisa', '=', True)]}"/>
                        <field name="account_credit_wh_igtf_id" attrs="{'required': [('aplicar_igtf_divisa', '=', True)]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>