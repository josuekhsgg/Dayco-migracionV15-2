<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_bank_statement_form_dual_currency" model="ir.ui.view">
        <field name="name">account.bank.statement.form_dual_currency</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="currency_id_journal"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='amount']" position="after">
                <field name="tasa_referencia_statement"/>
                <field name="currency_id_dif_statement" invisible="1"/>
                <field name="amount_usd_statement"/>
            </xpath>
        </field>
    </record>

</odoo>